        <!-- property name="esquema" value="${schema}"/-->
 	</bean>
 	<bean id="JdbcFactorDAO" class="com.analitica.web.dao.impl.JdbcFactorDAO">
 		<property name="dataSource" ref="dataSource"/>
 		<!-- Lee la propiedad schema del archivo propsBD.properties y la asigna a la variable esquema -->
        <!-- property name="esquema" value="${schema}"/-->
 	</bean>
 	<bean id="JdbcConsultaHistoricaDAO" class="com.analitica.web.dao.impl.JdbcConsultaHistoricaDAO">
 		<property name="dataSource" ref="dataSource"/>
 		<!-- Lee la propiedad schema del archivo propsBD.properties y la asigna a la variable esquema -->
        <!-- property name="esquema" value="${schema}"/-->
 	</bean>
</beans>